<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../layout/css.ejs') %>
    <title>Library</title>
</head>

<body>
    <header>


        <%- include('../layout/menu.ejs') %>

    <main>
        <h1 id="">Books</h1>

        <ul>
            <li>
                <a href="/"> Home </a> </li>
            <li>
                <a href="/search"> Search For A Book</a> </li>


    </header>
    <main>
        <h1><b><%= books.length %></b> Saved Books</h1>
        <section>
            <% books.forEach((book) => { %>
            <article class='book-results'>
                <img src="<%= book.image_url %>" alt="<%= book.title %>"
                    onerror="this.src=`https://i.imgur.com/J5LVHEL.jpg`;">
                <h3><%= book.title %></h3>
                <h4><%= book.author %></h4>
                <a href="/books/<%= book.id %>"><button class='button'>View Details</button></a>
            </article>
            <% }); %>
        </section>
    </main>
    <footer>

    </footer>
</body>

</html>